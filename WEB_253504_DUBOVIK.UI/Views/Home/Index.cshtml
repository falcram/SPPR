@model IEnumerable<ListDemo>

    <main class="container">
        <br>

        <h1>@ViewData["Title"]</h1>
        <h2>Список</h2>
        <ol type="A">
            @for(int i =1; i<=3;i++)
            {
                <li>Элемент @i</li>
            }
        </ol>
        <hr>
        <h2>Форма</h2>
        <form action="/Home" method="post">
            <select asp-items="ViewBag.ListD"  id="itemSelect" name="selectedItem" >    
            </select>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="checkbox1" value="ch1">
                    <label class="form-check-label" for="gridCheck1">
                    Checkbox 1
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="checkbox2" value="ch2">
                    <label class="form-check-label" for="gridCheck1">
                    Checkbox 2
                    </label>
                </div>
                </div>
            </div>

            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Radios</legend>
                <div class="col-sm-10">
                <div>
                    
                    <label class="form-check-label" for="gridRadios1">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="1" checked> First radio &nbsp
                    </label>

                    <label class="form-check-label" for="gridRadios1">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="2"> Second radio &nbsp
                        
                    </label>

                    
                    <label class="form-check-label" for="gridRadios1">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="3"> Third disabled radio &nbsp
                        
                    </label>

                </div>

                </div>
            </fieldset>


            <div class="row mb-3">
                <label for="inputlogin3" class="col-sm-2 col-form-label" name="login1">Login</label>
                <div class="col-sm-10">
                <input type="login" class="form-control" id="inputlogin3" name="Login">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label" name="password1">Password</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" name="Password">
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Sign in</button>

            
    </form>
    <br>
    </main>
    